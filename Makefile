################################################################################
################################################################################

CC=g++
CFlags=-O2 -std=c++11
NAME=bin/cfy
SRCS=src/main.cpp

#-------------------------------------------------------------------------------

all: $(NAME)

$(NAME): $(SRCS)
	mkdir -p bin
	$(CC) $(CFlags) $^ -o $@

#-------------------------------------------------------------------------------

re: clean all

clean:
	rm -f $(NAME)

fclean:
	rm -rf bin

################################################################################